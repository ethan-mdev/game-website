---
const { img, title, desc } = Astro.props;
---

<div
    class="group relative rounded-xl bg-neutral-800/80 p-6 shadow-sm ring-1 ring-inset ring-neutral-700/60
            hover:shadow-lg hover:ring-purple-500/50 transition"
>
    <img src={img} alt={title} class="mx-auto h-8 w-8" />
    <h3 class="mt-3 text-lg font-semibold text-gray-100">{title}</h3>
    <p class="mt-2 text-sm text-gray-400">{desc}</p>

    <!-- subtle glow accent on hover -->
    <div
        class="pointer-events-none absolute inset-px rounded-xl opacity-0 group-hover:opacity-100
              bg-gradient-to-br from-purple-500/10 via-sky-500/10 to-transparent transition"
    >
    </div>
</div>
